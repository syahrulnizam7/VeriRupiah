<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when button is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/custom_color_secondary" /> <!-- Warna saat tombol ditekan -->
            <corners android:radius="8dp" /> <!-- Sudut bulatan tombol -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/custom_color_primary" /> <!-- Warna default tombol -->
            <corners android:radius="8dp" /> <!-- Sudut bulatan tombol -->
        </shape>
    </item>
</selector>
