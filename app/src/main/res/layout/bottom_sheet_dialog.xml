<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/containerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Teks Bold "Choose" -->
        <TextView
            android:id="@+id/textChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih"
            android:textSize="18sp"
            android:textColor="@color/custom_color_primary"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <!-- Horizontal Layout for Camera -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- Image Button Camera -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/cameraImageButton"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_camera"
                    android:background="@null"
                    android:contentDescription="Camera"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/custom_color_secondary" />

                <!-- Text "Camera" -->
                <TextView
                    android:id="@+id/textCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camera"
                    android:textColor="@color/custom_color_secondary"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

            <!-- Horizontal Space -->
            <Space
                android:layout_width="16dp"
                android:layout_height="match_parent"/>

            <!-- Image Button Gallery -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/galleryImageButton"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_gallery"
                    android:background="@null"
                    android:contentDescription="Gallery"
                    android:layout_marginStart="8dp"
                    app:tint="@color/custom_color_secondary" />

                <!-- Text "Gallery" -->
                <TextView
                    android:id="@+id/textGallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gallery"
                    android:textColor="@color/custom_color_secondary"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/buttonfitur"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
